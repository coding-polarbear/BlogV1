{
    "version": "0.1.0",
    "isShellCommand": true,
    "isBackground": true,
    "showOutput": "always",
    "suppressTaskName": true,
    "tasks": [
        {
            "taskName": "build",
            "command": "javac",
            "args": ["-g", "${file}"],
            "isBuildCommand": false
        },
        {
            "taskName": "build-gradle",
            "command": "gradle",
            "showOutput": "always",
            "args": ["bootRun"],
            "isBuildCommand": true
        }
    ]
}